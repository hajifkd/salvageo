{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.geocities.jp/*",
        "https://www.geocities.jp/*"
      ],
      "js": [
        "scripts/main.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
